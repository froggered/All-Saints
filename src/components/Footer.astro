---
const quickLinks = [
  { href: '/All-Saints/about', label: 'About Us' },
  { href: '/All-Saints/services', label: 'Service Times' },
  { href: '/All-Saints/services#calendar', label: 'Calendar' },
  { href: '/All-Saints/contact', label: 'Contact' },
];

const discoverLinks = [
  { href: '/All-Saints/discover', label: 'What is Orthodoxy?' },
  { href: '/All-Saints/discover/visit', label: 'Your First Visit' },
  { href: '/All-Saints/discover/catechumenate', label: 'Catechumenate' },
  { href: '/All-Saints/about/ministries', label: 'Ministries' },
];

const socialLinks = [
  { href: 'https://www.facebook.com/Fr.Philip', label: 'Facebook', icon: 'f' },
  { href: 'https://www.youtube.com/@ArchimandritePhilip', label: 'YouTube', icon: '‚ñ∂' },
  { href: 'https://twitter.com/FrPhilip', label: 'Twitter', icon: 'ùïè' },
];
---

<footer class="bg-charcoal text-white/80 pt-16 pb-8">
  <div class="max-w-7xl mx-auto px-6">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-12">
      <!-- Brand Column -->
      <div>
        <a href="/All-Saints/" class="flex items-center gap-2 text-white font-heading text-xl font-semibold uppercase tracking-wide mb-4">
          <span class="text-gold text-2xl">&#9766;</span>
          All Saints of Lincolnshire
        </a>
        <p class="text-white/60 text-sm mb-6">
          Orthodox Christian Parish under the Antiochian Archdiocese, serving Lincoln and the surrounding area.
        </p>
        <div class="flex gap-3">
          {socialLinks.map((link) => (
            <a
              href={link.href}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center text-white hover:bg-gold hover:text-navy transition-colors"
              aria-label={link.label}
            >
              {link.icon}
            </a>
          ))}
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="font-heading text-sm uppercase tracking-wider text-gold mb-5">Quick Links</h4>
        <ul class="space-y-3">
          {quickLinks.map((link) => (
            <li>
              <a href={link.href} class="text-white/70 text-sm hover:text-gold transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Discover -->
      <div>
        <h4 class="font-heading text-sm uppercase tracking-wider text-gold mb-5">Discover</h4>
        <ul class="space-y-3">
          {discoverLinks.map((link) => (
            <li>
              <a href={link.href} class="text-white/70 text-sm hover:text-gold transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="font-heading text-sm uppercase tracking-wider text-gold mb-5">Contact</h4>
        <address class="not-italic text-white/70 text-sm leading-relaxed">
          Saint Matthias Church Centre<br />
          Burton Road<br />
          Lincoln LN1 3TX<br /><br />
          07969 332740<br />
          Fr.Philip@gmx.com
        </address>
      </div>
    </div>

    <div class="border-t border-white/10 pt-8 flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-white/50">
      <span>&copy; {new Date().getFullYear()} All Saints of Lincolnshire. All rights reserved.</span>
      <span class="font-accent italic text-gold">Glory to Jesus Christ!</span>
    </div>
  </div>
</footer>
