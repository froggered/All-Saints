---
interface Service {
  day: string;
  time: string;
  name: string;
}

interface Props {
  services?: Service[];
}

const defaultServices = [
  { day: 'Wednesday', time: '6:00 PM', name: 'Vespers' },
  { day: 'Thursday', time: '11:00 AM', name: 'Moleiben' },
  { day: 'Saturday', time: '8:00 AM', name: 'Divine Liturgy' },
  { day: 'Saturday', time: '5:00 PM', name: 'Vespers' },
  { day: 'Sunday', time: '10:00 AM', name: 'Divine Liturgy' },
];

const { services = defaultServices } = Astro.props;
---

<div class="bg-navy rounded-xl p-8 text-white">
  <h3 class="text-2xl font-heading uppercase tracking-wide mb-6 flex items-center gap-3">
    <span class="text-gold text-3xl">&#9766;</span>
    Weekly Services
  </h3>

  <ul class="space-y-0">
    {services.map((service, index) => (
      <li class={`grid grid-cols-[120px_80px_1fr] gap-6 py-4 items-center ${index < services.length - 1 ? 'border-b border-white/10' : ''}`}>
        <span class="font-heading uppercase tracking-wide text-sm">{service.day}</span>
        <span class="text-white/70 text-sm">{service.time}</span>
        <span class="text-gold font-heading">{service.name}</span>
      </li>
    ))}
  </ul>

  <a href="/All-Saints/services" class="btn btn-primary w-full mt-6">
    View Full Calendar
  </a>
</div>

<style>
  @media (max-width: 430px) {
    li {
      grid-template-columns: 1fr 1fr !important;
      grid-template-rows: auto auto;
      gap: 0.25rem 1rem !important;
    }

    li span:first-child {
      grid-column: 1;
      grid-row: 1;
    }

    li span:nth-child(2) {
      grid-column: 2;
      grid-row: 1;
      text-align: right;
    }

    li span:last-child {
      grid-column: 1 / -1;
      grid-row: 2;
      padding-bottom: 0.5rem;
    }
  }
</style>
