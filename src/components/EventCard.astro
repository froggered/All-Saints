---
interface Props {
  month: string;
  day: string;
  weekday: string;
  title: string;
  time: string;
  description: string;
  featured?: boolean;
}

const { month, day, weekday, title, time, description, featured = false } = Astro.props;
---

<div class={`bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow hover:-translate-y-1 duration-200`}>
  <div class={`p-5 text-center ${featured ? 'bg-burgundy' : 'bg-navy'}`}>
    <span class="font-heading text-xs uppercase tracking-widest text-gold">{month}</span>
    <span class="block font-heading text-4xl font-bold text-white my-1">{day}</span>
    <span class="text-xs uppercase tracking-wide text-white/70">{weekday}</span>
  </div>
  <div class="p-5">
    <h4 class="font-heading text-lg uppercase tracking-wide text-navy mb-1">{title}</h4>
    <p class="font-heading text-gold text-sm mb-3">{time}</p>
    <p class="text-slate text-sm">{description}</p>
  </div>
</div>
