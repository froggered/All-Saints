---
const navLinks = [
  { href: '/All-Saints/about', label: 'About' },
  { href: '/All-Saints/discover', label: 'Discover' },
  { href: '/All-Saints/services', label: 'Services' },
  { href: '/All-Saints/news', label: 'News' },
  { href: '/All-Saints/support', label: 'Support' },
];
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-navy">
  <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
    <a href="/All-Saints/" class="flex items-center gap-2 text-white font-heading text-xl font-semibold uppercase tracking-wide">
      <span class="text-gold text-2xl">&#9766;</span>
      All Saints
    </a>

    <!-- Desktop Navigation -->
    <ul class="hidden md:flex gap-8">
      {navLinks.map((link) => (
        <li>
          <a
            href={link.href}
            class="text-white/85 font-heading text-sm uppercase tracking-wide hover:text-gold transition-colors"
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>

    <div class="flex items-center gap-4">
      <!-- Live Button (placeholder - will be dynamic later) -->
      <a href="#" class="hidden sm:flex btn btn-live gap-2 py-2 px-4 text-xs">
        <span class="w-2 h-2 bg-white rounded-full animate-pulse"></span>
        Live
      </a>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden text-white p-2"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="hidden md:hidden bg-navy border-t border-white/10">
    <ul class="px-6 py-4 space-y-4">
      {navLinks.map((link) => (
        <li>
          <a
            href={link.href}
            class="block text-white/85 font-heading text-sm uppercase tracking-wide hover:text-gold transition-colors"
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>
  </div>
</nav>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
