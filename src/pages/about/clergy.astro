---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PageHeader from '../../components/PageHeader.astro';
import { getCollection } from 'astro:content';

// Get clergy from content collection, sorted by order
const clergyEntries = await getCollection('clergy');
const clergy = clergyEntries
  .sort((a, b) => a.data.order - b.data.order);
---

<BaseLayout title="Our Clergy">
  <PageHeader
    title="Our Clergy"
    subtitle="The priests and deacons serving All Saints of Lincolnshire"
  />

  <section class="py-20 bg-white">
    <div class="max-w-4xl mx-auto px-6">

      {clergy.map(async (person) => {
        const { Content } = await person.render();
        return (
          <div class="bg-off-white rounded-xl overflow-hidden mb-8">
            <div class="md:flex">
              <div class="md:w-1/3">
                <img
                  src={person.data.photo}
                  alt={person.data.title}
                  class="w-full h-full object-cover"
                />
              </div>
              <div class="p-6 md:w-2/3">
                <h3 class="font-heading text-2xl uppercase tracking-wide text-navy mb-1">{person.data.title}</h3>
                <p class="text-gold font-medium mb-4">{person.data.role}</p>
                <div class="text-charcoal text-sm space-y-3 [&>p]:mb-3">
                  <Content />
                </div>
              </div>
            </div>
          </div>
        );
      })}

      <div class="p-8 bg-navy text-white rounded-xl text-center mb-16">
        <h3 class="font-heading text-2xl uppercase tracking-wide mb-4">
          Get in Touch
        </h3>
        <p class="text-white/80 mb-6 max-w-2xl mx-auto">
          Our clergy are always happy to speak with visitors and answer questions
          about the Orthodox faith.
        </p>
        <a href="/All-Saints/contact" class="btn btn-primary">Contact Us</a>
      </div>

      <!-- Prev/Next Navigation -->
      <div class="flex justify-between items-center">
        <a href="/All-Saints/about/history" class="group flex items-center gap-3 text-navy hover:text-burgundy transition-colors">
          <span class="text-2xl group-hover:-translate-x-1 transition-transform">&larr;</span>
          <span>
            <span class="text-slate text-sm block">Previous</span>
            <span class="font-heading text-xl uppercase tracking-wide">Our History</span>
          </span>
        </a>
        <a href="/All-Saints/about/ministries" class="group flex items-center gap-3 text-navy hover:text-burgundy transition-colors">
          <span class="text-right">
            <span class="text-slate text-sm block">Next</span>
            <span class="font-heading text-xl uppercase tracking-wide">Ministries</span>
          </span>
          <span class="text-2xl group-hover:translate-x-1 transition-transform">&rarr;</span>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
