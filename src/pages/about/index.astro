---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PageHeader from '../../components/PageHeader.astro';

const sections = [
  {
    title: 'Our Church',
    href: '/All-Saints/about/church',
    description: 'Learn about All Saints of Lincolnshire, our tradition, and our community.',
  },
  {
    title: 'Our History',
    href: '/All-Saints/about/history',
    description: 'From a mission in Louth to a thriving parish in Lincoln.',
  },
  {
    title: 'Our Clergy',
    href: '/All-Saints/about/clergy',
    description: 'Meet the priests and deacons serving All Saints of Lincolnshire.',
  },
  {
    title: 'Ministries',
    href: '/All-Saints/about/ministries',
    description: 'Catechesis, outreach, education, and community service.',
  },
  {
    title: 'Contact',
    href: '/All-Saints/contact',
    description: 'Get in touch with us or find directions to our church.',
  },
];
---

<BaseLayout title="About">
  <PageHeader
    title="About Us"
    subtitle="Learn more about All Saints of Lincolnshire"
  />

  <section class="py-20 bg-white">
    <div class="max-w-4xl mx-auto px-6">
      <div class="grid sm:grid-cols-2 gap-6">
        {sections.map((section) => (
          <a
            href={section.href}
            class="block p-6 bg-off-white rounded-xl border border-black/5 hover:shadow-lg hover:-translate-y-1 transition-all duration-200"
          >
            <h3 class="font-heading text-xl uppercase tracking-wide text-navy mb-2">
              {section.title}
            </h3>
            <p class="text-slate text-sm">{section.description}</p>
            <span class="inline-block mt-4 text-gold font-heading text-sm uppercase tracking-wide">
              Learn More â†’
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
